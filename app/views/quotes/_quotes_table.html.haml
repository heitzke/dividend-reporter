- if title && !quotes.empty?
  %h2= title
- unless quotes.empty?
  %table{:class => "datatable display"}
    %thead
      %tr
        %th Dividend
        %th ExDate
        %th Dividend/Share
        %th Last Price
        %th Collected At
    %tfoot
      %tr
        %th Dividend
        %th ExDate
        %th Dividend/Share
        %th Last Price
        %th Collected At
    %tbody
      - quotes.each do |quote|
        %tr.gradeC
          %td= quote.dividend.to_s
          %td= quote.exdate.to_s
          %td= quote.dividend_per_share.to_s
          %td= quote.last_price.to_s
          %td= quote.created_at.to_s
