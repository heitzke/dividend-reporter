= form_for(@stock) do |f|
  - if @stock.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@stock.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @stock.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :name
    %br
    = f.text_field :name
  .field
    = f.label :ticker
    %br
    = f.text_field :ticker

  .actions
    = f.submit
